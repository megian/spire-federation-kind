{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["gomod"],
  "packageRules": [
    {
      "matchPackageNames": ["go"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": true
    },
    {
      "matchPackageNames": ["go"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
